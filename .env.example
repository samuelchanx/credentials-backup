# Environment Configuration for Credentials Backup
# This file contains sensitive configuration that should not be committed to git
# Copy this file to .env and modify the values as needed

# Backup Configuration
BACKUP_DIR=./backups
REPOS_DIR=~/Documents/workdev
HOME_DIR=~

# Cloud Storage Configuration
RCLONE_REMOTE=PCloud
RCLONE_PATH=credentials-backup/

# Security Configuration
# Set a default password for 7zip encryption (leave empty to prompt each time)
BACKUP_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/backup.log

# Advanced Options
MAX_FILE_SIZE_MB=1
SKIP_BINARY_FILES=true
SKIP_LARGE_FILES=true
